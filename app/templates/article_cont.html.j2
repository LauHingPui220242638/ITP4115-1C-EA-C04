{% extends "base.html.j2" %}
{% block app_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar">
                    <h2>Languages</h2>
                    <div class="Languages">
                        {% for language in language %}
                            <div class="Language">
                                <h4>
                                    <a href="{{ url_for('article_subj', id=language.id) }}">{{ language.name }}</a>
                                </h4>
                            </div>
                        {% endfor %}
                    </div>
                    <br>
                    <h2>Subjects</h2>
                    <div class="Others">
                        {% for other in other %}
                            <div class="Others">
                                <h4>
                                    <a href="{{ url_for('article_subj', id=other.id) }}">{{ other.name }}</a>
                                </h4>
                            </div>
                        {% endfor %}
                    </div>
                    <br>
                    <h4>
                        <a href="{{ url_for('articles') }}">All Articles</a>
                    </h4>
                </div>
            </div>
            <div class="col-md-9">
                <h3>By {{ article.author }}</h3>
                <h1>{{ article.name }}</h1>
                <br>
                <h4>{{ article.description }}</h4>
            </div>
        {% endblock %}
