{% extends "base.html.j2" %}
{% block app_content %}
    <h1>{{ subject.name }}</h1>
    <h3>{{ subject.description }}</h3>
    <h2>Courses</h2>
    {% for course in courses %}
        <div class="Courses">
        <h3><a href="{{ url_for('course', id=course.id) }}">{{ course.coursename }}</a></h3>
        </div>
    {% endfor %}
{% endblock %}