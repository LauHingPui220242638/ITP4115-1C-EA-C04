{% extends "base.html.j2" %}
{% block app_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar">
                    <h1>Topic</h1>
                    {% for concept in concepts %}
                        <div class="topic">
                            <h4>
                                    <a href="{{ url_for('doc_content', id=concept.id) }}">{{ concept.title }}</a>
                            </h4>
                        </div>
                    {% endfor %} 
                </div>
            </div>
            <div class="col-md-9">
            </div>
        </div>
    </div>
{% endblock %}