{# {% extends 'bootstrap/base.html' %} #}
<head>
<title>
Forum - {% block title %}{% endblock %} - Codeacdemy
</title>
<link rel="stylesheet" href="{{ url_for('static', filename='forum_base.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</head>

<div id="main">
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
  <div class="container-fluid">
    <span style="padding:0vw 2vw;"></span>
    <a href="{{ url_for('index') }}"><img href="{{ url_for('index') }}" src="https://global.discourse-cdn.com/codecademy/original/5X/e/0/8/c/e08cf790a5972ac52a036a0fb64e4e139baec615.png" class="navbar-brand img-fluid" width="150"></a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        {% if current_user.is_admin == true  %}
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ url_for('forum.admin') }}">Admin</a>
        </li>
        {% endif %}
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ url_for('forum.home') }}">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ url_for('catalog') }}">Catalog</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="https://community.codecademy.com/">Chapters</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="https://discord.com/invite/codecademy">Chat</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {% if current_user.is_authenticated %}
                {{ current_user.username }}
            {% else %}
                Welcome
            {% endif %}
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="{{url_for('user', username=current_user.username)}}">Profile</a></li>
            <li><a class="dropdown-item" href="{{url_for('forum.topic_last')}}">Recent</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
            {% if current_user.is_authenticated %}
                <a class="dropdown-item" href="{{ url_for('logout')}}">Logout
            {% else %}
                <a class="dropdown-item" href="{{ url_for('login')}}">Login
            {% endif %}
            </a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled"></a>
        </li>
      </ul>
    <span style="padding:0vw 2vw;"></span>
    </div>
  </div>
</nav>



<div style="margin-bottom:20px;"></div>
<div class="d-flex justify-content-evenly" padding="20px"><p class="fs-1 " style="font-family: Arial, sans-serif;font-weight: bold;">Codecademy Forums</p></div>
<div class="d-flex justify-content-evenly" style="font-family:Suisse ,sans-serif;font-size: 1rem;font-weight: lighter;"><p class="fs-5 ">
Welcome to the friendliest place for anyone learning to code!
New User Guide
Codecademy Help
</p></div>
<div class="d-flex justify-content-evenly">
    <div class="banner-links">
        <div class="banner-link-container">
            <a href="https://discuss.codecademy.com/t/learn-more-welcome-to-the-codecademy-community-forums/522490" class="banner-link">New User Guide</a>
            <div class="arrow-svg"></div>
        </div>    
        <div class="banner-link-container">
            <a href="https://help.codecademy.com/hc/en-us" class="banner-link">Codecademy Help </a>
            <div class="arrow-svg"></div>
        </div>    
    </div>
</div>
<form class="d-flex" id="search">
    <span style="padding:0vw 10vw;"></span>
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
    <span style="padding:0vw 10vw;"></span>
</form>

</div>


<div class="content"></div>
{% block content%}
{% endblock %}
</div>
{% include "forum_footer.html.j2" %}
