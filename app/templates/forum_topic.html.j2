<a href="{{ url_for('forum.topic',id=topic.id)}}"
   class="list-group-item w-100 list-group-item-action"
   aria-current="true">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{ topic.title }}</h5>
        <small>{{ topic.date }}</small>
    </div>
    <p class="mb-1">by {{ topic.author }}</p>
    <small> {{ topic.likecount }} likes</small>
</a>
